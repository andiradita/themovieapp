<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@+id/navigation_search">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.andiradita.themovieapp.ui.home.HomeFragment"
        android:label="@string/item_menu_discover"
        tools:layout="@layout/home_fragment"/>
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.andiradita.themovieapp.ui.search.SearchFragment"
        android:label="@string/item_menu_search"
        tools:layout="@layout/search_fragment"/>
    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.andiradita.themovieapp.ui.favorite.FavoriteFragment"
        android:label="@string/item_menu_favorite"
        tools:layout="@layout/favorite_fragment"/>
</navigation>